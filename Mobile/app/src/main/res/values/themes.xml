<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SmartEnglish" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item> <!-- 处理刘海屏/挖孔屏 -->
        <item name="android:windowTranslucentNavigation">true</item> <!-- 允许内容延伸到导航栏区域 (传统方式) -->
    </style>

    <!-- 添加启动画面主题 -->
    <style name="Theme.SmartEnglish.Starting" parent="Theme.SplashScreen">
        <!-- 启动画面背景颜色 -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- 启动图标 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_wide</item>
        <!-- 动画持续时间 -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- 过渡到的主题 -->
        <item name="postSplashScreenTheme">@style/Theme.SmartEnglish</item>
    </style>
</resources>